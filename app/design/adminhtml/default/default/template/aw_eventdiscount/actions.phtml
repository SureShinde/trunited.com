                    obj.up().down('select.groups').hidden = true;
                    obj.up().down('input').hidden = false;
                    obj.up().down('input').addClassName('required-entry');
                    obj.up().down('input').value='';
                }
            },
            add : function(obj) {
                var id = this.createId();
