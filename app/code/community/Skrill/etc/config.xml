<config>
    <modules>
        <Skrill>
            <version>1.0.28</version>
        </Skrill>
    </modules>

    <global>
        <helpers>
            <skrill>
                <class>Skrill_Helper</class>
            </skrill>
        </helpers>
        <models>
            <skrill>
                <class>Skrill_Model</class>
            </skrill>
        </models>
        <resources>
            <skrill_setup>
                <setup>
                    <module>Skrill</module>
					<class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </skrill_setup>
        </resources>
        <blocks>
            <skrill>
                <class>Skrill_Block</class>
            </skrill>
        </blocks>
        <sales>
            <order>
                <statuses>
                    <payment_accepted translate="label">
                        <label>SUCCESS_PAYMENT_ACC</label>
                    </payment_accepted>
                    <payment_remotely translate="label">
                        <label>SUCCESS_PREAUTH_ACC</label>
                    </payment_remotely>
                    <invalid_credential translate="label">
                        <label>INVALID_CREDENTIAL</label>
                    </invalid_credential>
                </statuses>
				<states>
					<pending_payment>
						<statuses>
							<payment_remotely/>
						</statuses>
					</pending_payment>
					<processing>
						<statuses>
							<payment_accepted/>
						</statuses>
					</processing>
                   <processing>
                        <statuses>
                            <invalid_credential/>
                        </statuses>
                   </processing>
				</states>
            </order>
        </sales>
        <payment>
            <groups>
                <skrillpm>Skrill Payment Methods</skrillpm>
            </groups>
        </payment>
    </global>

    <frontend>
        <translate>
            <modules>
                <Skrill>
                    <files>
                        <default>Skrill.csv</default>
                    </files>
                </Skrill>
            </modules>
        </translate>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Skrill>
                    <files>
                        <default>Skrill.csv</default>
                    </files>
                </Skrill>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
            <skrill>
                <use>admin</use>
                <args>
                    <module>Skrill</module>
                    <frontName>skrill</frontName>
                </args>
            </skrill>
            <adminhtml>
                <args>
                    <modules>
                        <Skrill after="Mage_Adminhtml">Skrill</Skrill>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <frontend>
        <routers>
            <skrill>
                <use>standard</use>
                <args>
                    <module>Skrill</module>
                    <frontName>skrill</frontName>
                </args>
            </skrill>
        </routers>
        <layout>
            <updates>
                <skrill_checkout>
                    <file>skrill_checkout.xml</file>
                </skrill_checkout>
            </updates>
        </layout>
        <events>
            <sales_model_service_quote_submit_success>
                <observers>
                    <skrill_success_observer>
                        <type>model</type>
                        <class>Skrill_Model_Success_Observer</class>
                        <method>activateQuote</method>
                    </skrill_success_observer>
                </observers>
            </sales_model_service_quote_submit_success>
        </events>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <skrill_system_config>
                    <file>skrill/system_config.xml</file>
                </skrill_system_config>
            </updates>
        </layout>
        <events>
            <admin_system_config_section_save_after>
