                    <skrill_config_observer>
                        <type>model</type>
                        <class>Skrill_Model_Config_Observer</class>
                        <method>saveConfig</method>
                    </skrill_config_observer>
                </observers>
            </admin_system_config_section_save_after>
        </events>
    </adminhtml>

