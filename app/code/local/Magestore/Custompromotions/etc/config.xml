<?xml version="1.0"?>
<config>
    <modules>
        <Magestore_Custompromotions>
            <version>0.2.0</version>
        </Magestore_Custompromotions>
    </modules>
    <frontend>
        <routers>
            <custompromotions>
                <use>standard</use>
                <args>
                    <module>Magestore_Custompromotions</module>
                    <frontName>custompromotions</frontName>
                </args>
            </custompromotions>
            <customer>
                <args>
                    <modules>
                        <Magestore_Custompromotions before="Mage_Customer">Magestore_Custompromotions</Magestore_Custompromotions>
                    </modules>
                </args>
            </customer>
        </routers>
        <layout>
            <updates>
                <custompromotions>
                    <file>custompromotions.xml</file>
                </custompromotions>
            </updates>
        </layout>
		<translate>
            <modules>
                <Magestore_Custompromotions>
                    <files>
                        <default>Magestore_Custompromotions.csv</default>
                    </files>
                </Magestore_Custompromotions>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
			<custompromotionsadmin>
				<use>admin</use>
				<args>
					<module>Magestore_Custompromotions</module>
					<frontName>custompromotionsadmin</frontName>
				</args>
			</custompromotionsadmin>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<custompromotions>
					<file>custompromotions.xml</file>
				</custompromotions>
			</updates>
		</layout>
		<translate>
            <modules>
                <Magestore_Custompromotions>
                    <files>
                        <default>Magestore_Custompromotions.csv</default>
                    </files>
                </Magestore_Custompromotions>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <custompromotions>
                <class>Magestore_Custompromotions_Model</class>
                <resourceModel>custompromotions_mysql4</resourceModel>
            </custompromotions>
            <custompromotions_mysql4>
                <class>Magestore_Custompromotions_Model_Mysql4</class>
                <entities>
                    <custompromotions>
                        <table>custompromotions</table>
                    </custompromotions>
                    <verifymobile>
                        <table>customer_verify_mobile</table>
                    </verifymobile>
                    <phonecode>
                        <table>mobile_codes</table>
                    </phonecode>
                </entities>
            </custompromotions_mysql4>
        </models>
        <resources>
            <custompromotions_setup>
                <setup>
                    <module>Magestore_Custompromotions</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </custompromotions_setup>
            <custompromotions_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </custompromotions_write>
            <custompromotions_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </custompromotions_read>
        </resources>
        <blocks>
            <custompromotions>
                <class>Magestore_Custompromotions_Block</class>
            </custompromotions>
        </blocks>
        <helpers>
            <custompromotions>
                <class>Magestore_Custompromotions_Helper</class>
            </custompromotions>
        </helpers>
        <events>
            <customer_register_success>
                <observers>
                    <custompromotions_customer_register_success>
                        <type>singleton</type>
                        <class>custompromotions/observer</class>
                        <method>customerRegisterSuccess</method>
                    </custompromotions_customer_register_success>
                </observers>
            </customer_register_success>
            <sales_order_place_after>
                <observers>
                    <custompromotions_sales_order_place_after>
                        <type>singleton</type>
                        <class>custompromotions/observer</class>
                        <method>salesOrderPlaceAfter</method>
                    </custompromotions_sales_order_place_after>
                </observers>
            </sales_order_place_after>
            <sales_order_save_after>
                <observers>
                    <custompromotions_sales_order_save_after>
                        <type>singleton</type>
                        <class>custompromotions/observer</class>
                        <method>salesOrderSaveAfter</method>
                    </custompromotions_sales_order_save_after>
                </observers>
            </sales_order_save_after>
            <sales_order_shipment_save_after>
                <observers>
                    <custompromotions_sales_order_shipment_save_after>
                        <type>singleton</type>
                        <class>custompromotions/observer</class>
                        <method>salesOrderShipmentSaveAfter</method>
                    </custompromotions_sales_order_shipment_save_after>
                </observers>
            </sales_order_shipment_save_after>
            <adminhtml_customer_prepare_save>
                <observers>
                    <custompromotions_adminhtml_customer_prepare_save>
                        <type>singleton</type>
                        <class>custompromotions/observer</class>
                        <method>customerPrepareSave</method>
                    </custompromotions_adminhtml_customer_prepare_save>
                </observers>
            </adminhtml_customer_prepare_save>
            <adminhtml_customer_save_after>
                <observers>
                    <custompromotions_adminhtml_customer_save_after>
                        <type>singleton</type>
                        <class>custompromotions/observer</class>
                        <method>customerSaveAfter</method>
                    </custompromotions_adminhtml_customer_save_after>
                </observers>
            </adminhtml_customer_save_after>
        </events>
    </global>

    <default>
        <custompromotions>
            <general>
                <enable>1</enable>
                <rewards>10</rewards>
                <max_customers>10</max_customers>
            </general>
            <product>
                <enable>1</enable>
                <truwallet_sku>TWGIFTCARD</truwallet_sku>
                <truwallet_value>50</truwallet_value>
                <order_status>pending</order_status>
                <notify_message>Important: truWallet cannot be used as a payment option for Gift Cards.</notify_message>
            </product>
            <shipment>
                <enable>1</enable>
                <order_status>partially_shipped</order_status>
            </shipment>
            <verify>
                <enable>1</enable>
                <account_sid>ACd6a9a46831370f7b1e0a4bfec67e01f7</account_sid>
                <auth_token>1f5a99d7d43d1e8e97da27f3df5c379f</auth_token>
                <sender_number>16025170555</sender_number>
                <code_length>5</code_length>
                <allow_edit>0</allow_edit>
                <mobile_code>1</mobile_code>
            </verify>
            <cms_page>
                <message_login>You have to login first ! Please click <a href="{{login_url}}" title="Login Customer">here</a> to login.</message_login>
            </cms_page>
            <custom_product>
                <product_type>customproduct,gfitcardproduct</product_type>
            </custom_product>
            <ytd_mtd>
                <enable>1</enable>
                <profit>Amount paid out to members in {{current_year}}</profit>
                <shared>Amount shared with Trunited shoppers so far this month</shared>
            </ytd_mtd>
        </custompromotions>
    </default>
</config>
