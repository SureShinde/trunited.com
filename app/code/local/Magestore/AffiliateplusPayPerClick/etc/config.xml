<config>
    <modules>
        <Magestore_AffiliateplusPayPerClick>
            <!--Changed By Adam 04/11/2014: accepted by Blanka-->
            <version>0.4.3</version>
        </Magestore_AffiliateplusPayPerClick>
    </modules>
    <frontend>
        <routers>
            <affiliatepluspayperclick>
                <use>standard</use>
                <args>
                    <module>Magestore_AffiliateplusPayPerClick</module>
                    <frontName>affiliatepluspayperclick</frontName>
                </args>
            </affiliatepluspayperclick>
        </routers>
        <layout>
            <updates>
                <affiliatepluspayperclick>
                    <file>affiliatepluspayperclick.xml</file>
                </affiliatepluspayperclick>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_AffiliateplusPayPerClick>
                    <files>
                        <default>Magestore_AffiliateplusPayPerClick.csv</default>
                    </files>
                </Magestore_AffiliateplusPayPerClick>
            </modules>
        </translate>
        <events>
            <!--
            <affiliateplus_get_list_program_welcome>
                <observers>
                    <affiliatepluspayperclick_observers_welcome>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>addProgramWelcome</method>
                    </affiliatepluspayperclick_observers_welcome>
                </observers>
            </affiliateplus_get_list_program_welcome>
            -->
            <affiliateplus_save_action_before>
                <observers>
                    <affiliatepluspayperclick_saveactionbefore>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>saveActionBefore</method>
                    </affiliatepluspayperclick_saveactionbefore>
                </observers>
            </affiliateplus_save_action_before>
            <affiliateplus_traffics_statistic>
                <observers>
                    <affiliateplus_traffics_statistic_addclicktrafficsstatistic>
                        <type>singleton</type>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>addClickTrafficsStatistic</method>
                    </affiliateplus_traffics_statistic_addclicktrafficsstatistic>
                </observers>
            </affiliateplus_traffics_statistic>
            <affiliateplus_prepare_program>
                <observers>
                    <affiliateplus_prepare_program_detail_addclick_program_detail>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>addClickProgramDetail</method>
                    </affiliateplus_prepare_program_detail_addclick_program_detail>
                </observers>
            </affiliateplus_prepare_program>
            <affiliateplus_show_program_on_welcome>
                <observers>
                    <affiliateplus_show_program_on_welcome_addclick_welcome_program>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>addClickWelcomeProgram</method>
                    </affiliateplus_show_program_on_welcome_addclick_welcome_program>
                </observers>
            </affiliateplus_show_program_on_welcome>
        </events>
    </frontend>
    <admin>
<!--        Changed By Adam 29/10/2015: Fix issue of SUPEE 6788 - in Magento 1.9.2.2-->
<!--        <routers>
            <affiliatepluspayperclickadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_AffiliateplusPayPerClick</module>
                    <frontName>affiliatepluspayperclickadmin</frontName>
                </args>
            </affiliatepluspayperclickadmin>
        </routers>-->
        <routers>
            <adminhtml> 
                <args> 
                    <modules> 
                        <Magestore_AffiliateplusPayPerClick after="Mage_Adminhtml">Magestore_AffiliateplusPayPerClick_Adminhtml</Magestore_AffiliateplusPayPerClick>
                    </modules> 
                </args> 
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <affiliatepluspayperclick>
                    <file>affiliatepluspayperclick.xml</file>
                </affiliatepluspayperclick>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_AffiliateplusPayPerClick>
                    <files>
                        <default>Magestore_AffiliateplusPayPerClick.csv</default>
                    </files>
                </Magestore_AffiliateplusPayPerClick>
            </modules>
        </translate>
        <events>
            <affiliateplusprogram_adminhtml_edit_actions>
                <observers>
                    <affiliatepluspayperclick_add_program_tab>
                        <type>singleton</type>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>affiliatepluspayperclick_add_program_tab</method>
                    </affiliatepluspayperclick_add_program_tab>
                </observers>
            </affiliateplusprogram_adminhtml_edit_actions>
            <affiliateplus_program_save_after>
                <observers>
                    <affiliateplus_program_save_after>
                        <type>singleton</type>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>saveProgramClickCommissionProgramSaveAfter</method>
                    </affiliateplus_program_save_after>
                </observers>
            </affiliateplus_program_save_after>
            <affiliateplus_adminhtml_add_column_transaction_grid>
                <observers>
                    <affiliatepluspayperclick_affiliateplus_adminhtml_add_column_transaction_grid>
                        <type>singleton</type>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>addColumnTransactionGrid</method>
                    </affiliatepluspayperclick_affiliateplus_adminhtml_add_column_transaction_grid>
                </observers>
            </affiliateplus_adminhtml_add_column_transaction_grid>
            <affiliateplus_adminhtml_add_column_account_transaction_grid>
                <observers>
                    <affiliatepluspayperclick_affiliateplus_adminhtml_add_column_account_transaction_grid>
                        <type>singleton</type>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>addColumnAccountTransactionGrid</method>
                    </affiliatepluspayperclick_affiliateplus_adminhtml_add_column_account_transaction_grid>
                </observers>
            </affiliateplus_adminhtml_add_column_account_transaction_grid>
        </events>
    </adminhtml>   
    <global>
        <models>
            <affiliatepluspayperclick>
                <class>Magestore_AffiliateplusPayPerClick_Model</class>
                <resourceModel>affiliatepluspayperclick_mysql4</resourceModel>
            </affiliatepluspayperclick>
            <affiliatepluspayperclick_mysql4>
                <class>Magestore_AffiliateplusPayPerClick_Model_Mysql4</class>
                <entities>
                    <affiliatepluspayperclick>
                        <table>affiliatepluspayperclick</table>
                    </affiliatepluspayperclick>
                    <clickprogramcommission>
                        <table>affiliatepluspayperclick_program_commission</table>
                    </clickprogramcommission>
                </entities>
            </affiliatepluspayperclick_mysql4>
        </models>
        <resources>
            <affiliatepluspayperclick_setup>
                <setup>
                    <module>Magestore_AffiliateplusPayPerClick</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </affiliatepluspayperclick_setup>
            <affiliatepluspayperclick_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </affiliatepluspayperclick_write>
            <affiliatepluspayperclick_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </affiliatepluspayperclick_read>
        </resources>
        <blocks>
            <affiliatepluspayperclick>
                <class>Magestore_AffiliateplusPayPerClick_Block</class>
            </affiliatepluspayperclick>
        </blocks>
        <helpers>
            <affiliatepluspayperclick>
                <class>Magestore_AffiliateplusPayPerClick_Helper</class>
            </affiliatepluspayperclick>
        </helpers>
        <events>
            <affiliateplus_program_load_after>
                <observers>
                    <addProgramClickCommission>
                        <type>singleton</type>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>addProgramClickCommissionProgramLoadAfter</method>
                    </addProgramClickCommission>
                </observers>
            </affiliateplus_program_load_after>
            <affiliateplus_program_get_store_attributes>
                <observers>
                    <addProgramClickCommissionAttributes>
                        <type>singleton</type>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>addProgramClickCommissionAttributes</method>
                    </addProgramClickCommissionAttributes>
                </observers>
            </affiliateplus_program_get_store_attributes>
            <affiliateplus_get_action_types>
                <observers>
                    <affiliatepluspayperclick_affiliateplus_get_action_types>
                        <type>singleton</type>
                        <class>affiliatepluspayperclick/observer</class>
                        <method>affiliateplus_get_action_types</method>
                    </affiliatepluspayperclick_affiliateplus_get_action_types>
                </observers>
            </affiliateplus_get_action_types>

        </events>
    </global>
    <default>
        <affiliateplus>
        <!--<payperclick>1</payperclick>-->
            <commission>
                <payperclick_enable>1</payperclick_enable>
                <clickcommission>0</clickcommission>
            </commission>
        </affiliateplus>
    </default>
</config>