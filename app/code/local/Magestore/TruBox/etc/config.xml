<config>
    <modules>
        <Magestore_TruBox>
            <version>0.2.0</version>
        </Magestore_TruBox>
    </modules>
    <frontend>
        <secure_url>
            <trubox_checkout>/mytrubox/checkout</trubox_checkout>
        </secure_url>
        <routers>
            <trubox>
                <use>standard</use>
                <args>
                    <module>Magestore_TruBox</module>
                    <frontName>mytrubox</frontName>
                </args>
            </trubox>
        </routers>
        <layout>
            <updates>
                <trubox module="Magestore_TruBox">
                    <file>trubox.xml</file>
                </trubox>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_TruBox>
                    <files>
                        <default>Magestore_TruBox.csv</default>
                    </files>
                </Magestore_TruBox>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <truboxadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_TruBox</module>
                    <frontName>truboxadmin</frontName>
                </args>
            </truboxadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <trubox>
                    <file>trubox.xml</file>
                </trubox>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_TruBox>
                    <files>
                        <default>Magestore_TruBox.csv</default>
                    </files>
                </Magestore_TruBox>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <trubox>
                <class>Magestore_TruBox_Model</class>
                <resourceModel>trubox_mysql4</resourceModel>
            </trubox>
            <trubox_mysql4>
                <class>Magestore_TruBox_Model_Mysql4</class>
                <entities>
                    <trubox>
                        <table>trubox</table>
                    </trubox>
                    <item>
                        <table>trubox_item</table>
                    </item>
                    <address>
                        <table>trubox_address</table>
                    </address>
                    <payment>
                        <table>trubox_payment</table>
                    </payment>
                    <order>
                        <table>trubox_order</table>
                    </order>
                    <coupon>
                        <table>trubox_coupon_code</table>
                    </coupon>
                    <history>
                        <table>trubox_history</table>
                    </history>
                </entities>
            </trubox_mysql4>
        </models>
        <resources>
            <trubox_setup>
                <setup>
                    <module>Magestore_TruBox</module>
                    <class>Magestore_TruBox_Model_Mysql4_Setup</class>
                </setup>
            </trubox_setup>
        </resources>
        <blocks>
            <trubox>
                <class>Magestore_TruBox_Block</class>
            </trubox>
            <adminhtml>
                <rewrite>
                    <sales_order_grid>Magestore_TruBox_Block_Adminhtml_Sales_Order_Override_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <trubox>
                <class>Magestore_TruBox_Helper</class>
            </trubox>
        </helpers>
        <template>
            <email>
                <trubox_email_out_of_stock>
                    <label>Email template sent to customer when order has items are out of stock</label>
                    <file>trubox/out_of_stock.html</file>
                    <type>html</type>
                </trubox_email_out_of_stock>
            </email>
        </template>
    </global>
    <default>
        <sales>
            <totals_sort>
                <trubox>34</trubox>
                <trubox_after_tax>44</trubox_after_tax>
            </totals_sort>
        </sales>
        <trubox>
            <general>
                <enable>1</enable>
                <cms_description>trubox_description</cms_description>
                <enable_testing_mode>0</enable_testing_mode>
                <email_testing_mode>dev@trunited.vn</email_testing_mode>
                <enable_orders_section>1</enable_orders_section>
                <enable_product_listing>1</enable_product_listing>
                <physical_only_product>GP588568-100,GP588568-50,GP588568-25,GP588568,GP348965-50,GP348965,GP183219-50,GP183219</physical_only_product>
                <enable_coupon_code>1</enable_coupon_code>
                <coupon_code>TRUBOX20</coupon_code>
                <start_date_code>07/1/2017</start_date_code>
                <end_date_code>08/5/2017</end_date_code>
                <type_code>1</type_code>
                <coupon_code_amount>20</coupon_code_amount>
                <delay_second>1</delay_second>
                <current_date>6</current_date>
                <start_month>1</start_month>
            </general>
            <shipping>
                <shipping_method>freeshipping_freeshipping</shipping_method>
                <shipping_amount>5</shipping_amount>
            </shipping>
            <email>
                <out_of_stock>trubox_email_out_of_stock</out_of_stock>
            </email>
        </trubox>
    </default>
</config>
