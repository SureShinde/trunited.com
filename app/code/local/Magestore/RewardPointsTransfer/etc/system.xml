<config>
    <tabs>
        <magestore translate="label">
            <label>Magestore Extension</label>
            <sort_order>400</sort_order>
        </magestore>
    </tabs>
    <sections>
        <rewardpoints translate="label" module="rewardpoints">
            <groups>
                <transferplugin translate="label">
                    <label>Transfer Plugin Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>        
                        <enable translate="label">
                            <label>Enable Plugin</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </enable>
                        <customer_group translate="label comment">
                            <label>Customer Group</label>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>10</sort_order>
                            <source_model>Magestore_RewardPointsTransfer_Model_Group</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </customer_group>
                        <maximum_point translate="label comment">
                            <label>Max points allowed in a transfer</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If empty or zero, Customers are allowed to send unlimited amount of points.</comment>
                        </maximum_point>
                        <!-- xuanbinh 10-07-2015 -->
                        <minimum_point translate="label comment">
                            <label>Minimum accumulated points when transfer on frontend</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Customers have to accumulate this amount when transfer point on frontend.</comment>
                        </minimum_point>
                        <!--  -->
                        <holding_day translate="label comment">
                            <label>Hold point transfer for</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>day(s). If empty or zero, transfers are completed immediately</comment>
                        </holding_day>
                        <pending_day translate="label comment">
                            <label>While waiting for recipientsâ€™ registration, hold points for</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>day(s).If empty or zero, points are held for 30 days.</comment>
                        </pending_day>
                        <email_notification translate="label">
                            <label>Enable email sent to recipient having account</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>60</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </email_notification>
                        <email_template_have_account translate="label comment">
                            <label>Template of email sent to recipient having account </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_template_have_account>
                        <email_template_no_account translate="label comment">
                            <label>Template of email sent to recipient not having account</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_template_no_account>
                        <email_cancel_transfer>
                            <label>Enable email sent to sender and recipient when canceling transfer</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>81</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </email_cancel_transfer>
                        <email_template_cancel_transfer translate="label comment">
                            <label>Template of email sent when canceling transfer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>82</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_template_cancel_transfer>
                        <allow_cancel translate="label">
                            <label>Allow senders to cancel transferring</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>51</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </allow_cancel>
                    </fields>
                </transferplugin>
            </groups>
        </rewardpoints>
    </sections>
</config>